<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_marginBottom="7dp"
    android:descendantFocusability="blocksDescendants"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView app:cardBackgroundColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="3dp" >

        <LinearLayout
            android:weightSum="5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/product_image"
                android:scaleType="centerCrop"
                android:src="@drawable/my_bg"
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_height="0dp" />

            <LinearLayout
                android:gravity="center_vertical"
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingLeft="11dp"
                    android:text="Name of Menu"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/product_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:paddingLeft="11dp"
                    android:text="Người bán: 1"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="21sp" />

            </LinearLayout>

            <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingLeft="11dp"
                    android:text="$1000"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/product_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:paddingLeft="11dp"
                    android:text="SP: 4/10"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="21sp" />

            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <info.hoang8f.widget.FButton
                    android:id="@+id/btnEdit"
                    android:text="EDIT"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    app:fButtonColor="@color/white"
                    app:cornerRadius="0dp"
                    android:layout_height="wrap_content" />

                <info.hoang8f.widget.FButton
                    android:id="@+id/btnRemove"
                    android:text="REMOVE"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    app:fButtonColor="@color/white"
                    app:cornerRadius="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>